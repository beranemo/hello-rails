<h1>Index Page</h1>

<%= link_to "新增資料", new_group_path %>

<table>
  <tr>
    <td>Title</td>
    <td>Content</td>
    <td>Action</td>
  </tr>
  <% @groups.each do |g| %>
  <tr>
    <td><%= g[:title] %></td>
    <td><%= g.content %></td>
    <td>
      <!-- Show Link -->
      <%= link_to "show1", group_path(g) %>
      <%= link_to "show2", group_path(g.id) %>      
      <!-- Edit Link -->
      <%= link_to "修改1", edit_group_path(g) %>
      <%= link_to "修改2", edit_group_path(g.id) %>
      <!-- Delete Link -->
      <%= link_to "刪除",
group_path(g.id),
method: :delete,
data: {confirm: "Are you sure you want to delete?"} %>
    </td>
  </tr>
  <% end %>
</table>